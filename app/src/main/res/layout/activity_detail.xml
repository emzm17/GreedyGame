<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


            <ImageView
                android:id="@+id/detail_album_pic"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"

                android:scaleType="centerCrop"
                android:padding="4dp"
                android:src="@mipmap/ic_launcher" />

            <!--on below line we are creating
                a simple text view-->
            <TextView
                android:id="@+id/details_album_nametv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:text="Bad Blood"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
            <TextView
                android:id="@+id/details_artist_nametv"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Talyor Swift"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_album_rcivew"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView

        android:text="@string/desc"
        android:textSize="15sp"
        android:id="@+id/details_album_descri"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>